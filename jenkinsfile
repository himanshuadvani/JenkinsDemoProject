pipeline {
    agent any
    tools {
        maven 'maven3.6'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
               createJAR()
            }
            post {
                success {
                   sh 'java -jar target/spring-boot-0.0.1-SNAPSHOT.jar'
                }
            }
        }
    }
}   